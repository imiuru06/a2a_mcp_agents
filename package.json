{
  "name": "a2a-mcp-agents-ui",
  "version": "1.0.0",
  "description": "일렉트론 기반 자동차 정비 에이전트 서비스 UI",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron . --watch src",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "A2A MCP Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "vue": "^3.3.8"
  },
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.a2amcp.agents",
    "productName": "A2A MCP 자동차 정비 에이전트",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
} 