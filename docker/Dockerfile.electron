FROM node:18-slim

# 작업 디렉토리 설정
WORKDIR /app

# 의존성 파일 복사 및 설치
COPY package.json package-lock.json* ./
RUN npm install

# 소스 코드 복사
COPY . .

# Vue.js 의존성 다운로드
RUN mkdir -p src/assets
RUN curl -sL https://unpkg.com/vue@3.3.8/dist/vue.global.prod.js -o src/assets/vue.js

# 애플리케이션 빌드
RUN npm run build

# 필요한 경우 추가 도구 설치
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgtk-3-0 \
    libnotify-dev \
    libgconf-2-4 \
    libnss3 \
    libxss1 \
    libasound2 \
    libxtst6 \
    xauth \
    xvfb \
    && rm -rf /var/lib/apt/lists/*

# Electron 앱 실행
CMD ["npm", "start"] 